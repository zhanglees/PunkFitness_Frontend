/**app.wxss**/
page{
  --base:#4182E9;
  --base-light:#5DA0E6;
  --base-gradient: linear-gradient(#5DA0E6, #4182E9);
  /* --base-gradient: linear-gradient(rgba(93, 160, 230, .2), rgba(65, 130, 233 .2)); */
  --base-bg: rgba(0, 141, 234, .1);
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  position: relative;
  font-size: 28rpx;
  color: #333;
} 
.page-form{
  width: 100%;
  padding: 10rpx 10rpx 20rpx;
}
.container .form-btn-confirm{
  background: var(--base);
  border-radius: 10rpx;
  color: #fff;
}
.container .form-btn-confirm:hover{
  background: var(--base);
}

