.del-act-btn{
  border-radius: 50%;
  background: #999;
  position: absolute;
  right: 5%;
  top: 5%;
  height: 20rpx;
  width: 20rpx;
}
.del-act-btn .weui-icon{
  height: 10rpx;
  width: 10rpx;
  vertical-align: top;
}
.border-gradient{
  border-image: var(--base-gradient);
  border-image-slice: 10;
}
.btn-gradient{
  background: var(--base-gradient);
  color: #fff;
  border-radius: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 80rpx;
  display: inline-block;
}
.btn-hollow-gradient{
  border: 1px solid var(--base-light);
  color: var(--base);
  border-radius: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 80rpx;
}

.footer{
  width: 100%;
  position: fixed;
  bottom: 80rpx;
  text-align: center;
}
