/**addmember.wxss**/

.addmember-page-form {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 0 32rpx;
}

.addmember-form {
    width: 100%;
    box-sizing: border-box;
    padding: 10rpx 64rpx 20rpx;
}

.addmember-page-form .weui-cell {
    padding-left: 0rpx;
    padding-right: 0rpx;
    color: #333;
}

.weui-cell::after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    color: rgba(0, 0, 0, 0.1);
    z-index: 2;
}

.weui-cell .weui-select {
    color: #333;
}

.weui-cell-nosplit::after {
    display: none;
}

.form-textarea,
.form-checkbox {
    padding-top: 0;
}

.form-textarea .weui-textarea {
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: var(--base-radius);
    padding: 20rpx;
    box-sizing: border-box;
}

.form-textarea {
    position: relative;
}

.remark-area-tip {
    position: absolute;
    right: 16rpx;
    bottom: 48rpx;
}

.form-checkbox .form-checkbox-item {
    margin-right: 50rpx;
}

.form-bottom {
    font-size: 24rpx;
    color: #999;
    line-height: 2;
}

.form-bottom .form-btn {
    margin-bottom: 10rpx;
    display: block;
}

.required-cell .weui-label::after {
    content: '*';
    color: red;
    font-size: 28rpx;
    vertical-align: middle;
    margin-left: 16rpx;
    display: inline-block;
}