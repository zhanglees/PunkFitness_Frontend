/* pages/evaluation/dynamic/dynamic.wxss */

.top_layout{
    background: #3D4257;
    width: 100%;
    color: #fff;
}
.top-right{
    position: absolute;
    line-height: 60rpx;
    height: 60rpx;
    right: 20rpx;
    font-size: 24rpx;
}

.top-tab{
    margin-top: 40rpx;
    padding: 20rpx 40rpx 10rpx;
    text-align: center;
    display: flex;
    justify-content: space-around;
    flex-wrap: nowrap;
    width: 100%;
    box-sizing: border-box;
    color: #ddd;
}
.tab-item{
    display: inline-block;
    flex: 1;
    line-height: 2;
    height: 60rpx;
    text-align: center;
}
.tab-item-act{
    color: #fff;
    position: relative;
    font-weight: bold;
}
.tab-item-act::after{
    position: absolute;
    width: 80%;
    height: 2px;
    border-radius: 1px;
    bottom: 0;
    left: 10%;
    right: 0;
    content: '';
    background-color: #fff;
}

.exp-image-wrapper{
    background: #3D4257;
    width: 100%;
    height: 300rpx;
}
.content-swiper{
    width: 100%;
}
