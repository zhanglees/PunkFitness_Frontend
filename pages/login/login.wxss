.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header, .logo-img{
  width: 160rpx;
  height: 160rpx;
}
.header{
  margin: 144rpx auto 204rpx;
}
.content{
  width: 100%;
}
.login-btn{
  width: 654rpx!important;
  height: 88rpx;
