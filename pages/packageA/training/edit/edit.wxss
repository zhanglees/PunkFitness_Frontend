/* pages/packageA/training/edit/edit.wxss */
page{
    background: #eee;
}
.container{
    position: relative;
}
.page-title{
    margin-bottom: 20rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 0 20rpx;
    line-height: 80rpx;
    height: 80rpx;
    background: #fff;
    font-size: 32rpx;
    position: fixed;
    top: 0;
    z-index: 10;
    box-shadow: 0px 2px 4px #999;    
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.save-btn{
    font-size: 24rpx;
}
.page-title .weui-input{
    flex: 1;
    display: inline-block;
    margin-left: 10rpx;
}
.training-list{
    width: 100%;
    box-sizing: border-box;
    margin-top: 100rpx;
}
.training-item{
    background: #fff;
    padding: 0 20rpx;
    margin-bottom: 20rpx;
}
.training-title{
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 30rpx;
    position: relative;
}
.training-title::after{
    content: "";
    height: 10rpx;
    width: 10rpx;
    position: absolute;
    left: 0;
    top: 35rpx;
    background: #FAB44F;
    display: block;
}
.training-list .training-item:nth-child(2) .training-title::after{
    background: #42D3C4;
}
.training-list .training-item:nth-child(3) .training-title::after{
    background: #799AF0;
}
.action-item{
    background: rgba(128, 128, 128, .1);
    border-radius: 4px;
    margin-bottom: 20rpx;    
    padding-bottom: 20rpx;
}
.training-add{
    color: #86C4EC;
    text-align: center;
    line-height: 80rpx;
    height: 80rpx;
    font-size: 24rpx;
    border-top: 1px solid #ddd;
}
.training-item .weui-cell__bd{
    height: 80rpx;
}
.training-item .weui-cell{
    padding-top: 0;
    padding-bottom: 0;
}
.weui-input, .weui-label, .weui-select{
    height: 80rpx;
    line-height: 80rpx;
}
.training-item .weui-cell__hd{
    width: 210rpx;
}
.add-one-bottom{
    display: flex;
    justify-content: space-around;
    padding-bottom: 20rpx;
}
.add-one-btn{
    border: 1px solid #86C4EC;
    border-radius: 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #86C4EC;
    padding: 0 20rpx;
}
.add-one-btn-cancel{
    color: gray;
    border-color: gray;
}
.edit-one{
    text-align: right;
    height: 80rpx;
    box-sizing: border-box;
    padding: 20rpx 20rpx 0;
    font-size: 24rpx;
}
.add-one-btn-edit{
    width: fit-content;
    display: inline-block;
    margin-right: 20rpx;
}
.action-list{
    padding-bottom: 20rpx;
}
.add-one-btn-del{
    color: #DF8172;
    border-color: #DF8172;
    width: fit-content;
    display: inline-block;
}

.user-video{
    width: 200rpx;
    height: 200rpx;
}
.video-wrapper{
    position: relative;
    border: 1px dashed #ddd;
    border-radius: 2px;
    height: 200rpx;
    width: 200rpx;
    box-sizing: border-box;
    margin-left: 30rpx;
    margin-right: 20rpx;
}
.eva-camera{
    text-align: center;
    font-size: 20rpx;
    padding-top: 60rpx;
    color: #999;
}