.container {
    position: relative;
}

.page-title {
    width: 100%;
    box-sizing: border-box;
    padding: 50rpx 32rpx 32rpx;
    /* line-height: 80rpx;
    height: 80rpx; */
    background: #fff;
    font-size: 32rpx;
    /* position: fixed;
    top: 0; */
    /* z-index: 10; */
    /* box-shadow: 0px 2px 4px #999;     */
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    align-items: center;
}

.classname {
    position: relative;
    padding-left: 50rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: #222834;
    line-height: 44rpx;
    height: 44rpx;
}

.classname::before,
.classname::after {
    content: '';
    display: inline-block;
    width: 28rpx;
    height: 28rpx;
    border-radius: 28rpx;
    position: absolute;
    left: 0;
    top: 8rpx;
}

.classname::before {
    background: #386DF3;
}

.classname::after {
    background: #60D481;
    left: 14rpx;
}

.edit-btn {
    height: 32rpx;
    width: 32rpx;
}

.edit-tips {
    width: 100%;
    color: #C1C7D6;
    line-height: 32rpx;
    height: 32rpx;
    font-size: 24rpx;
    margin-top: 8rpx;
}

.edittitle {
    font-size: 44rpx;
    height: 56rpx;
    line-height: 56rpx;
}

.save-btn {
    font-size: 32rpx;
    font-weight: 500;
    color: #386DF3;
}

.page-title .weui-input {
    flex: 1;
    display: inline-block;
    margin-left: 10rpx;
}

.training-list {
    width: 100%;
    box-sizing: border-box;
    padding: 0 32rpx;
    margin-bottom: 60rpx;
}


