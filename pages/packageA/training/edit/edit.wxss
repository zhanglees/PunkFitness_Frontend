.training-item-edit .training-title {
    height: 40rpx;
    padding-left: 30rpx;
    position: relative;
    font-size: 32rpx;
    font-weight: 500;
    color: #222834;
    line-height: 40rpx;
    margin-bottom: 48rpx;
    margin-top: 48rpx;
}

.training-item-edit {
    height: 128rpx;
    overflow: hidden;
    border-bottom: 1px solid #F1F1F3;
}

.training-item-edit .arrow-down-icon .weui-icon {
    transform: rotate(90deg);
    margin-left: 20rpx;
}

.training-item-edit .training-add {
    display: none;
}

.training-item-edit-expand .training-add {
    display: block;
}

.training-item-edit-expand .arrow-down-icon .weui-icon {
    transform: rotate(270deg);
}

.training-item-edit-expand {
    height: unset;
}

.training-title::before {
    content: "";
    height: 10rpx;
    width: 10rpx;
    position: absolute;
    left: 0;
    top: 15rpx;
    background: #FAB44F;
    display: block;
}

.training-list .training-item:nth-child(2) .training-title::before {
    background: #42D3C4;
}

.training-list .training-item:nth-child(3) .training-title::before {
    background: #799AF0;
}

