
.container{
    background-color: #eee;
    color: #333;
  }
.top_layout{
    background: #fff;
    text-align: center;
    width: 100%;
    position: relative;
    box-sizing: border-box;
    padding: 100rpx 0;
}
.top-say-sth{
    margin-bottom: 40rpx;
}
.goto-fitness-btn{
    display: inline-block;
    border: 1px solid var(--base);
    border-radius: 30rpx;
    color: var(--base);
    padding: 0 20rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    height: 60rpx;
}
.detail{
    width: 100%;
    box-sizing: border-box;
    margin-top: 40rpx;
    padding: 40rpx 64rpx;
    background: #fff;
}
.detail-tab{
    margin-bottom: 40rpx;
}
.tab-item{
    display: inline-block;
    margin-right: 40rpx;
    line-height: 2;
    height: 60rpx;
}
.tab-item-act{
    color: var(--base);
    position: relative;
}
.tab-item-act::after{
    position: absolute;
    width: 100%;
    height: 2px;
    border-radius: 1px;
    bottom: 0;
    left: 0;
    right: 0;
    content: '';
    background-color: var(--base);
}
.detail-ul{
    position: relative;
    width: 100%;
    height: auto;
    box-sizing: border-box;
}
.detail-li {
    margin-bottom: 20rpx;
    display: block;
}
.detail-li view{
    line-height: 60rpx;
    height: 60rpx;
}
.detail-li-q{
    border-bottom: 1px solid #ddd;
}
.detail-li-a{
    color: #999;
}