/* pages/packageA/inbody/inbody.wxss */
.container{
    background-color: #eee;
    color: #333;
  }
.top__layout{
    background: #F6F6F6;
    text-align: center;
    width: 100%;
    position: relative;
    box-sizing: border-box;
    padding: 100rpx 0;
}
.top__layout .report-add{
    display: inline-block;
    border: 1px solid var(--base);
    border-radius: 30rpx;
    color: var(--base);
    padding: 0 20rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    height: 60rpx;
    margin-top: 40rpx;
}
.top__layout-chart{
    background: #3D4257;
    position: relative;
    width: 100%;
    height: 500rpx;
}
.right-top{
    position: absolute;
    right: 10rpx;
    top: 0;
    /* border: 1px solid #eee;
    border-radius: 20rpx; */
    color: #eee;
    height: 60rpx;
    line-height: 60rpx;
    box-sizing: border-box;
    text-align: center;
    padding: 0 20rpx;
}
.right-top-icon{
    width: 40rpx;
    height: 40rpx;
    vertical-align: sub;
    display: inline-block;
}
.canvas {
    /* position: absolute; */
    width: 100%;
    height: 400rpx;
    box-sizing: border-box;
}
.canvas-wrapper{
    width: 100%;
    margin-top: 40rpx;
    box-sizing: border-box;
}
.canvas-title{
    font-size: 20rpx;
    color: #eee;
    padding-left: 20rpx;
}
.right-user{
    display: none;
    position: absolute;
    right: 0;
    top: 80rpx;
    border-radius: 40rpx 0 0 40rpx;
    background: #222834;
    color: #eee;
    font-size: 20rpx;
    padding-left: 40rpx;
    height: 80rpx;
    padding: 10rpx 10rpx 10rpx 30rpx;
    display: flex;
    align-items: center;
    opacity: .8;
}
.userinfo-avatar{
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
}
.user-info, .user-change{
    display: flex;
    text-align: center;
    align-items: center;
    flex-direction: column;
}
.user-info{
    margin-right: 20rpx;
}
.act-area{
    background: #fff;
    color: var(--base);
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.act-area .top-say-sth{
    display: none;
}
.report-add{
    display: flex;
    align-items: center;
}
.add-icon{
    width: 28rpx;
    height: 28rpx;
    border-radius: 50%;
    background: var(--base);
    color: #fff;
    font-size: 28rpx;
    line-height: 24rpx;
    text-align: center;
    font-weight: bold;
    margin-right: 10rpx;
    display: inline-block;
}
.report-act-right{
    text-align: right;
}
.report-btn{
    border-radius: 24rpx;
    height: 48rpx;
    line-height: 48rpx;
    padding: 0 20rpx;
    width: fit-content;
    margin-right: 20rpx;
    display: inline-block;
    box-sizing: border-box;
}
.reserve-btn{
    border: 1px solid var(--base);
    background:var(--base-bg);
    color: var(--base);
} 
.compare-btn{
    background: var(--base);
    color: #fff;
}
.report-area{
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 40rpx;
    background: #fff;
    margin-top: 30rpx;
}
.report-item{
    border-bottom: 1px solid #eee;
    margin-bottom: 48rpx;
    position: relative;
    display: block;
}
.report-item-cell{
    display: flex;
    justify-content: space-between;
}
.report-item-coach{
    color: #bbb;
    float: right;
    font-size: 20rpx;
}
.report-data-number{
    font-size: 48rpx;
    font-weight: bold;
}