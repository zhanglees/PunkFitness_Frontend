.container{
    background-color: #eee;
}
.top_layout{
    background: #3D4257;
    width: 100%;
    color: #fff;
}
.top-right{
    position: absolute;
    line-height: 60rpx;
    height: 60rpx;
    right: 20rpx;
    font-size: 24rpx;
}
.top-tab{
    margin-top: 40rpx;
    padding: 20rpx 40rpx 10rpx;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
    color: #ddd;
}
.tab-item{
    display: inline-block;
    margin: 0 40rpx;
    line-height: 2;
    height: 60rpx;
}
.tab-item-act{
    color: #fff;
    position: relative;
    font-weight: bold;
}
.tab-item-act::after{
    position: absolute;
    width: 100%;
    height: 2px;
    border-radius: 1px;
    bottom: 0;
    left: 0;
    right: 0;
    content: '';
    background-color: #fff;
}

.act-area{
    width: 100%;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    overflow: hidden;
    justify-content: space-around;
    box-sizing: border-box;
    padding: 10rpx;
    background: #fff;
    margin-bottom: 40rpx;
}
.exp-image-wrapper{
    width: 300rpx;
    height: 300rpx;
    overflow: hidden;
    margin-bottom: 10rpx;
    position: relative;
}
.exp-image-cover{
    position: absolute;
    top: 40%;
    left: 0;
    width: 100%;
    text-align: center;
}
.exp-image-act{
    display: inline-block;
    margin: 0 20rpx;
    color: #fff;
    /* background: rgba(255,255,255,0.6); */
    /* border-radius: 50%; */
}
.exp-image{
    width: 300rpx;
    height: 300rpx;
}
.eva-camera-wrapper{
    width: 300rpx;
    height: 300rpx;
    text-align: center;
    background: #F6F6F7;
}
.eva-camera{
    color: gray;
    font-size: 18rpx;
    margin-top: 50%;
    transform: translateY(-50%);
}
.camera{
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    text-align: center;
}
.camera-cover{
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}
.cover-image{
    width: 100%;
    height: 100%;
}
.camera-btn-wrapper{
    position: absolute;
    bottom: 60rpx;
    width: 100%;
}
.camera-btn{
    display: inline-block;
    background: var(--base);
    color: #fff;
    width: 40% !important;
    margin: 0 5% !important;
}
.camera-btn-cancel{
    background: #999;
}
swiper{
    width: 100%;
    position: relative;
}
.feedback{
    width: 100%;
    background: #fff;
    padding: 40rpx;
    box-sizing: border-box;
}
.feedback-title{
    width: 100%;
    text-align: center;
}
.feedback-item{
    position: relative;
    padding: 10rpx 0;
}
.feedback-checkbox{
    margin-bottom: 10rpx;
}
.feedback-radios{
    display: flex;
    flex-wrap: wrap;
    color: #999
}
.feedback-radio-item{
    word-break: keep-all;
    white-space: nowrap;
    margin-right: 20rpx;
}
.feedback-item::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid rgba(0,0,0,0.1);
  color: rgba(0,0,0,0.1);
  z-index: 2;
}
.feedback-remark{
    margin-top: 20rpx;
    margin-bottom: 40rpx;
}
.feedback-remark-area{
    height: 150rpx;
}
.report-list-area{
    background: #fff;
    padding: 40rpx;
    width: 100%;
    position: relative;
    overflow: hidden;
    box-sizing: border-box;
}
.report-list{
    display: flex;
    flex-wrap: nowrap;
    width: 100%;
    overflow: hidden;
}
.report-item{
    flex: 1;
    overflow: hidden;
}
.report-image-list, .report-problem-list{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}
.report-image-wrapper{
    width: 300rpx;
    height: 400rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
}
.report-image{
    width: 100%;
}
.report-problem{
    border: 1px solid #2D62F4;
    height: 60rpx;
    border-radius: 4px;
    color: #2D62F4;
    line-height: 60rpx;
    padding: 0 20rpx;
    margin-bottom: 20rpx;
    word-break: keep-all;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.report-list-title{
    font-size: 32rpx;
    color: #5d5d5d;
    margin-bottom: 20rpx;
    font-weight: 500;
}
.report-remark{
    margin-bottom: 40rpx;
}
.form-btn-confirm{
    margin-top: 100rpx;
}