/* pages/evaluation/dynamic/dynamic.wxss */
.top_layout{
    background: #3D4257;
    width: 100%;
    color: #fff;
}
.top-right{
    position: absolute;
    line-height: 60rpx;
    height: 60rpx;
    right: 20rpx;
    font-size: 24rpx;
}
.top-tab{
    margin-top: 40rpx;
    padding: 20rpx 40rpx 10rpx;
    text-align: center;
    display: flex;
    justify-content: space-around;
    flex-wrap: nowrap;
    width: 100%;
    box-sizing: border-box;
    color: #ddd;
}
.tab-item{
    display: inline-block;
    flex: 1;
    line-height: 2;
    height: 60rpx;
    text-align: center;
}
.tab-item-act{
    color: #fff;
    position: relative;
    font-weight: bold;
}
.tab-item-act::after{
    position: absolute;
    width: 80%;
    height: 2px;
    border-radius: 1px;
    bottom: 0;
    left: 10%;
    right: 0;
    content: '';
    background-color: #fff;
}
.swiper-item{
    background-color: #eee;
}
.exp-image-wrapper{
    background: #3D4257;
    width: 100%;
    height: 300rpx;
    text-align: center;
}
.exp-image{
    height: 300rpx;
}
.content-swiper{
    width: 100%;
}
.act-area{
    background: #fff;
    color: #9B9A9C;
    padding: 20rpx;
}
.act-video-list{
    margin: 20rpx 0;
    display: flex;
    align-items: center;
}
.eva-camera{
    text-align: center;
    font-size: 20rpx;
    padding-top: 60rpx;
}
.user-video{
    width: 200rpx;
    height: 200rpx;
}
.video-wrapper{
    position: relative;
    border: 1px solid #ccc;
    border-radius: 2px;
    height: 200rpx;
    width: 200rpx;
    box-sizing: border-box;
    margin-right: 20rpx;
}

.feedback{
    margin-top: 20rpx;
    width: 100%;
    background: #fff;
    padding: 40rpx;
    box-sizing: border-box;
}
.feedback-title{
    width: 100%;
    text-align: center;
}
.feedback-list{
    display: flex;
    justify-content: center;
    width: 100%;
    box-sizing: border-box;
    flex-wrap: wrap;
}
.feedback-item{
    position: relative;
    padding: 5rpx 0;
    border: 1px solid #999;
    border-radius: 40rpx;
    box-sizing: border-box;
    text-align: center;
    color: #999;
    width: 200rpx;
    font-size: 24rpx;
    display: inline-block;
    margin: 10rpx;
}
.feedback-item_act{
    border-color: var(--base);
    color: var(--base);
}
.feedback-remark{
    margin-top: 20rpx;
    margin-bottom: 40rpx;
}
.feedback-remark-area{
    height: 150rpx;
    border: 1px solid #ddd;
    border-radius: 10rpx;
    box-sizing: border-box;
    width: 100%;
    padding: 10rpx;
    margin-top: 10rpx;
}
.report-list{
    background: #3D4257;
    width: 100%;
    height: 100%;
    min-height: 100vh;
    color: #fff;
    padding: 20rpx 40rpx;
    box-sizing: border-box;
}
.report-item{
    margin-bottom: 40rpx;
}
.report-problem{
    color: #fff;
    border-color: #fff;
    width: 180rpx;
}
.btn-wrapper{
    background: #fff;
}
.step-btn{
    width: 100%;
    position: absolute;
    bottom: 20rpx;
    box-sizing: border-box;
    right: 0;
    left: 0;
    text-align: center
}
