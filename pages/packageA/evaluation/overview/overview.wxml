<!--evaluation    overview.wxml-->
<wxs src="/utils/util.wxs" module="utils" />
<view class="container">
    <view class="type-tab">
        <view wx:for="{{tabList}}" wx:key="id" bindtap="tabChange" data-id="{{item.id}}"  class="'tab-item' {{item.id == type ? 'tab-item-act' : ''}}">
        {{item.name}}
        </view>
    </view>
    <view class='top_layout'>
        <view class="top-say-sth">添加评估测试后，可以更好的定制适合您的训练</view>
        <view bindtap="gotoEvaluation" class="goto-btn">
            + 添加评估测试
        </view>
    </view>
    <view class="detail">
        <block wx:if="{{evaluation.length}}">
        <view class="detail-item" wx:for="{{evaluation}}" wx:key="index" wx:for-item="li" bindtap="gotoDetail" data-createtime="{{li.createTime}}" data-coachid="{{li.coachId}}">
            <text>{{['静态评估', '动态评估', '健康体适能'][li.assessmentType]}}</text>
            <view class="detatil-top-right">
                <text class="detail-coach">{{li.coachName}}</text>
                <text class="detatil-time">{{utils.formatDate(li.createTime)}}</text>
            </view>
        </view>
        </block>

        <view class="no-data" wx:else>暂无数据~</view>
    </view>
</view>