.container{
    background-color: #eee;
    color: #333;
  }
.type-tab{
    padding: 20rpx 40rpx 0;
    text-align: left;
    background: #fff;
    width: 100%;
    box-sizing: border-box;
}
.tab-item{
    display: inline-block;
    margin-right: 40rpx;
    line-height: 2;
    height: 60rpx;
}
.tab-item-act{
    color: var(--base);
    position: relative;
}
.tab-item-act::after{
    position: absolute;
    width: 100%;
    height: 2px;
    border-radius: 1px;
    bottom: 0;
    left: 0;
    right: 0;
    content: '';
    background-color: var(--base);
}
.top_layout{
    background: #fff;
    text-align: center;
    width: 100%;
    position: relative;
    box-sizing: border-box;
    padding: 60rpx 0 20rpx;
    /* border-top: 1px solid var(--base); */
}
.top-say-sth{
    margin-bottom: 40rpx;
}
.goto-btn{
    display: inline-block;
    border: 1px solid var(--base);
    border-radius: 30rpx;
    color: var(--base);
    padding: 0 20rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    height: 60rpx;
}
.detail{
    width: 100%;
    box-sizing: border-box;
    margin-top: 40rpx;
    padding: 40rpx 64rpx;
    background: #fff;
}
.detail-item{
    margin: 30rpx 0;
    display: flex;
    justify-content: space-between;
}
.detatil-top-right{
    color: #5d5d5d;    
    display: flex;
    justify-content: flex-end;
}
.detail-coach{    
    margin-right: 20rpx;
    width: 50%;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: keep-all;
    white-space: nowrap;
}
