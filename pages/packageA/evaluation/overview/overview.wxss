.container {
    background-color: #eee;
    color: #333;
}

.type-tab {
    padding: 20rpx 40rpx 0;
    text-align: left;
    background: #fff;
    width: 100%;
    box-sizing: border-box;
}

.tab-item {
    display: inline-block;
    margin-right: 40rpx;
    line-height: 2;
    height: 60rpx;
}

.tab-item-act {
    color: var(--base);
    position: relative;
}

.tab-item-act::after {
    position: absolute;
    width: 100%;
    height: 2px;
    border-radius: 1px;
    bottom: 0;
    left: 0;
    right: 0;
    content: '';
    background-color: var(--base);
}

.top_layout {
    background: #fff;
    text-align: center;
    width: 100%;
    position: relative;
    box-sizing: border-box;
    padding: 60rpx 0 20rpx;
    /* border-top: 1px solid var(--base); */
}

.top-say-sth {
    margin-bottom: 40rpx;
}

.goto-btn {
    display: inline-block;
    border: 1px solid var(--base);
    border-radius: 30rpx;
    color: var(--base);
    padding: 0 20rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    height: 60rpx;
}

.detail {
    width: 100%;
    box-sizing: border-box;
    margin-top: 40rpx;
    padding: 30rpx 30rpx;
    background: #fff;
}

.detail-ul {
    position: relative;
    width: 100%;
    height: auto;
    box-sizing: border-box;
    margin-bottom: 8rpx;
}

.detail-li {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: space-between;
    height: 132rpx;
    align-items: center;
    box-sizing: border-box;
}

.li-btn {
    width: 76rpx;
    height: 76rpx;
    margin-bottom: 24rpx;
}

.detail-li-right {
    color: #222834;
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-left: 24rpx;
    font-size: 28rpx;
    border-bottom: 1px solid #F1F1F3;
    padding-bottom: 24rpx;
}

.detail-li-coach {
    font-size: 24rpx;
    color: #BCC0C7;
}

.detail-li-a {
    color: #999;
}

.detail-li-title {
    font-size: 28rpx;
    color: #222834;
    text-align: left;
}