/* pages/schedule/schedule.wxss */

.container {
    padding: 48rpx 32rpx;
    background: #FAFAFC;
    min-height: 100vh;
}

.top-layout {
    width: 100%;
    color: #707784;
    height: 262rpx;
    background: #FFFFFF;
    box-shadow: 0px 12px 28px 0px rgba(34, 40, 52, 0.04);
    border-radius: 12px;
}

.training-item-b {
    display: flex;
    justify-content: space-between;
    align-content: center;
}

.status {
    float: right;
}

.checkin-btn {
    border: 1px solid var(--base);
    border-radius: var(--base-radius);
    padding: 0 10rpx;
    color: var(--base);
    margin-left: 20rpx;
}

.have-done {
    color: #999;
}

.dialog-picker {
    width: 100%;
    height: 200rpx;
}

.dialog-picker-item {
    line-height: 50rpx;
    text-align: center;
    color: #222834;
}

.btn-wrapper {
    position: fixed;
    bottom: 20rpx;
    width: 100%;
    text-align: right;
}

.btn-round {
    border-radius: 120rpx;
    width: 120rpx;
    padding: 0;
    text-align: center;
    line-height: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
    box-shadow: 2px 2px 10px 0px var(--base);
    position: relative;
}

.show-type-dialog {
    position: absolute;
    top: -294rpx;
    right: 27rpx;
    color: #999;
    width: 180rpx;
    box-shadow: 0 0 10px 2px #ddd;
    background: #fff;
}

.show-type-dialog::after {
    content: "";
    display: block;
    width: 0;
    height: 0;
    position: absolute;
    border-style: solid;
    border-width: 20rpx;
    border-color: #fff #fff transparent transparent;
    transform: rotate(135deg);
    box-shadow: 6px -6px 10px 0px #ddd;
    right: 13px;
    bottom: -19rpx;
}

.no-data-link {
    display: inline-block;
    color: #386DF3;
    font-size: 28rpx;
    margin: 0 8rpx;
}

.dialog-checkin .weui-dialog__ft {
    display: none;
}

.training-list {
    width: 100%;
    box-sizing: border-box;
    margin-top: 48rpx;
    flex: 1;
}

.training-item {
    box-sizing: border-box;
    padding: 32rpx 134rpx 32rpx 24rpx;
    margin-bottom: 32rpx;
    background: #FFFFFF;
    border-radius: 12rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.training-item-b {
    display: flex;
    flex-direction: column;
}

.training-user {
    font-size: 32rpx;
    color: #222834;
    line-height: 40rpx;
}

.training-time {
    font-size: 24rpx;
    color: #707784;
    line-height: 40rpx;
}

.training-status {
    width: 120rpx;
    height: 56rpx;
    border-radius: 0 12rpx 0 12rpx;
    font-weight: 500;
    line-height: 56rpx;
    position: absolute;
    right: 0;
    top: 0;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
    background: #386DF3;
}

.have-done {
    color: #fff;
    background: #00D878;
}

.have-cancel {
    color: #707784;
    background: #F1F1F5;
}

.training-user {
    font-size: 32rpx;
    color: #222834;
    line-height: 40rpx;
}